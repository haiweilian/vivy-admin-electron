{
  "name": "vivy-admin-electron",
  "version": "0.0.1",
  "description": "Vivy Admin Electron",
  "main": "./out/main/index.js",
  "license": "MIT",
  "author": "haiweilian <haiweilian@foxmail.com>",
  "homepage": "https://github.com/haiweilian/vivy-admin-electron",
  "repository": "https://github.com/haiweilian/vivy-admin-electron.git",
  "scripts": {
    "prepare": "husky",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "electron-builder install-app-deps",
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "vue-tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "build:test": "npm run typecheck && electron-vite build --mode test",
    "build:unpack:test": "npm run build:test && electron-builder --dir --config electron-builder-test.yml",
    "build:win:test": "npm run build:test && electron-builder --win --config electron-builder-test.yml",
    "build:mac:test": "npm run build:test && electron-builder --mac --config electron-builder-test.yml",
    "build:linux:test": "npm run build:test && electron-builder --linux --config electron-builder-test.yml"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "electron-updater": "^6.3.9"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@electron-toolkit/eslint-config-prettier": "3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.1.0",
    "@electron-toolkit/tsconfig": "^2.0.0",
    "@iconify-json/carbon": "^1.2.15",
    "@types/node": "^22.19.1",
    "@unocss/eslint-plugin": "^66.5.10",
    "@vitejs/plugin-vue": "^6.0.2",
    "ant-design-vue": "^4.2.6",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "electron-devtools-installer": "^4.0.0",
    "electron-vite": "^5.0.0",
    "eslint": "^9.39.1",
    "eslint-plugin-vue": "^10.6.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "sass": "^1.97.1",
    "typescript": "^5.9.3",
    "unocss": "^66.5.10",
    "unplugin-vue-components": "^30.0.0",
    "vite": "^7.2.6",
    "vue": "^3.5.25",
    "vue-eslint-parser": "^10.2.0",
    "vue-tsc": "^3.1.6"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "esbuild"
    ]
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown",
      "eslint --fix"
    ]
  }
}
